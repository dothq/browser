{
  "manifest_version": 2,

  "applications": {
    "gecko": {
      "id": "firefox-compact-light@mozilla.org"
    }
  },

  "name": "Light",
  "description": "A theme with a light color scheme.",
  "author": "Mozilla",
  "version": "1.0",

  "icons": {"32": "icon.svg"},

  "theme": {
    "colors": {
      "tab_background_text": "rgb(24, 25, 26)",
      "icons": "rgb(24, 25, 26, 0.7)",
      "frame": "#ECECEC",
      "popup": "#ffffff",
      "popup_text": "#0c0c0d",
      "popup_border": "#ccc",
      "tab_line": "#0a84ff",
      "toolbar": "#ffffff",
      "toolbar_bottom_separator": "#F4F4F4",
      "toolbar_field": "#F7F8F9",
      "toolbar_field_text": "rgb(24, 25, 26)",
      "toolbar_field_border": "#fff",
      "toolbar_field_focus": "#ffffff",
      "toolbar_field_separator": "rgba(0, 0, 0, 0.05)",
      "popup_highlight": "rgb(73, 101, 255)",
      "ntp_background": "#ffffff"
    }
  },

  "theme_experiment": {
    "stylesheet": "experiment.css"
  }
}
